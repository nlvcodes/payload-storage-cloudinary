{
  "name": "payload-storage-cloudinary",
  "version": "1.0.1",
  "description": "Cloudinary storage adapter for Payload CMS",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/exports/client.js",
      "types": "./dist/exports/client.d.ts",
      "default": "./dist/exports/client.js"
    },
    "./helpers/*": {
      "import": "./dist/helpers/*.js",
      "types": "./dist/helpers/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:types && pnpm build:swc && pnpm build:copy",
    "build:swc": "swc src -d dist --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:copy": "copyfiles -u 1 \"src/**/*.{scss,css}\" dist",
    "dev": "pnpm build:swc --watch",
    "clean": "rm -rf dist",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm clean && pnpm build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "payload",
    "cms",
    "plugin",
    "payload-plugin",
    "payload-storage",
    "cloudinary",
    "storage",
    "upload",
    "media"
  ],
  "author": "Nick Vogel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-github-username/payload-storage-cloudinary"
  },
  "bugs": {
    "url": "https://github.com/your-github-username/payload-storage-cloudinary/issues"
  },
  "homepage": "https://github.com/your-github-username/payload-storage-cloudinary#readme",
  "peerDependencies": {
    "@payloadcms/ui": "^3.0.0",
    "payload": "^3.0.0",
    "react": "^19.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@payloadcms/plugin-cloud-storage": "^3.0.0",
    "cloudinary": "^2.0.0"
  },
  "devDependencies": {
    "@payloadcms/ui": "^3.0.0",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.3.96",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "payload": "^3.0.0",
    "prettier": "^3.0.0",
    "react": "^19.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}